<style>
.card-collection-Section {
    margin-bottom: 118px;
}
  .grid-Container{
    max-width: 1920px;
    max-height: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
.grid-gallery {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(2, 1fr);
    gap: 0.2rem;
    row-gap: 10px;
    column-gap: 10px;
}
  .grid-box{
    width: 100%;
    height: 0;
    padding-bottom: 100%; / This maintains the aspect ratio /
    overflow: hidden;
    position: relative;
    transition: transform 0.3s, box-shadow 0.3s;
    overflow: hidden;
  }
  .grid-box > img{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }
  .grid-box:hover {
    / transform: scale(1.01); /
    box-shadow: 0 0px 5px 0px rgba(0, 0, 0, 0.2);
  }
  .grid-box:hover > img {
    transform: scale(1.05);
  }
  .card-collection-heading h2{
    text-align: center;
    color: #000000;
    font-weight: 700;
    font-size: 30px;
    font-family: 'Speed Fez';
    text-transform: uppercase;
        margin: 0;
  }

  .card-collection-heading {
    margin-bottom: 29px;
}
