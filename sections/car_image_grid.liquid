<div class="image-grid-container">
  <div class="box_heading">
    <h2>{{ section.settings.title }}</h2>
  </div>
  <div class="img-grid-section container">

    <div class="car_img_box_for">
      {% for block in section.blocks %}
      <div class="img_box_for">
        <a href="{{ block.settings.url }}&sort=manual" whref="" class="clicale">
        <div class="box_img_view">
          {% if block.settings.image %}
          <img class="late_load" data-src="{{ block.settings.image | img_url : 'master' }}" src="{{ block.settings.image | img_url : '50x' }}" width=100 height=100 alt="">
          {% else %}
          <img src="https://cdn.shopify.com/s/files/1/0568/1007/8283/files/Layer-1_1.png?v=1718443627" alt="">
          {% endif %}
        </div>
        <div class="car_name">
          <p>{% if block.settings.text %}{{ block.settings.text }}{% else %}Ford Mustang{% endif %}</p>
        </div>
        <div class="model_year">
          <p>{% if block.settings.text %}{{ block.settings.stext }}{% else %}2010-2014{% endif %}</p>
        </div>
        <div class="view_product">
          <a href="{{ block.settings.url }}&sort=manual">{{ block.settings.view-btn-url }}</a>
        </div>
        </a>
      </div>
        
      {% endfor %}

    </div>
  </div>
  {% if section.settings.text %}
  <div class="shop_btn grid_cont_for">
    <a href="{{ section.settings.url }}">{{ section.settings.text }}</a>
  </div>
  {% endif %}
</div>

{% schema %} 
  {
    "name": "Car Grid Image",
    "settings": [
      {
          "id" : "title",
          "type" : "text",
          "label" : "Title"
      },
      {
          "id" : "url",
          "type" : "url",
          "label" : "URL"
      },
      {
          "id" : "text",
          "type" : "text",
          "label" : "Button Text",
          "default":"Shop now"
      }
    ],
    "presets": [
      {
        "name": "Car Grid Image",
        "settings": {}
      }
    ],
    "blocks" : [
        {
            "type" : "collection",
            "name" : "collection",
            "settings" :[
                {
                    "id" : "image",
                    "type" : "image_picker",
                    "label" : "choose image"
                },{
                    "id" : "text",
                    "type" : "text",
                    "label" : "Title"
                },{
                    "id" : "stext",
                    "type" : "text",
                    "label" : "Sub Title"
                },
              {
                    "id" : "url",
                    "type" : "url",
                    "label" : "URL"
                },
              {
                    "id" : "view-btn-url",
                    "type" : "text",
                    "label" : "Button Text",
                    "default" : "View Products"
                }
            ]
        }
    ]
    
  }
{% endschema %}