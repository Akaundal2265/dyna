<!-- Footer -->
<footer class="footer">
    <div class="container">
        <div class="footer-top">
            <div class="footer-logo">
                <a href="{{ shop.url }}">
                    <img src="{{ section.settings.logo | img_url: '200x' }}" alt="Dyna Performance">
                </a>
            </div>
            <div class="footer-social">
                <a href="{{ settings.facebook_url }}" class="social-icon"><i class="fab fa-facebook-f"></i></a>
                <a href="{{ settings.instagram_url }}" class="social-icon"><i class="fab fa-instagram"></i></a>
                <a href="{{ settings.youtube_url }}" class="social-icon"><i class="fab fa-youtube"></i></a>
            </div>
        </div>
        <div class="footer-links">
            <div class="footer-column">
                <h4>Shop</h4>
                <ul>
                    {% for block in section.blocks %}
                        {% if block.type == 'shop_links' %}
                            <li><a href="{{ block.settings.link_url }}">{{ block.settings.link_text }}</a></li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
            <div class="footer-column">
                <h4>Help</h4>
                <ul>
                    {% for block in section.blocks %}
                        {% if block.type == 'help_links' %}
                            <li><a href="{{ block.settings.link_url }}">{{ block.settings.link_text }}</a></li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
            <div class="footer-column">
                <h4>Newsletter</h4>
                <p>Subscribe to our newsletter for latest product updates.</p>
                <form action="{{ shop.url }}/account/login" method="post" id="newsletter-form">
                    <input type="email" name="email" placeholder="Your email" required>
                    <button type="submit">Subscribe</button>
                </form>
            </div>
        </div>
        <div class="footer-bottom">
            <div class="payment-icons">
                <img src="{{ settings.payment_icons | img_url: '400x' }}" alt="Payment Methods">
            </div>
            <div class="footer-copyright">
                &copy; {{ 'now' | date: '%Y' }} Dyna Performance. All Rights Reserved.
            </div>
        </div>
    </div>
</footer>

<style>
.footer {
    background-color: #000;
    color: #fff;
    padding: 20px 0;
}
.footer-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    /* margin-bottom: 20px; */
}
.footer-logo img {
    width: 150px;
}
.footer-social .social-icon {
    margin: 0 10px;
    color: #fff;
    font-size: 18px;
}
.footer-links {
    display: flex;
    justify-content: space-between;
}
.footer-column {
    width: 30%;
}
.footer-column h4 {
    font-size: 16px;
    margin-bottom: 10px;
}
.footer-column ul {
    list-style: none;
    padding: 0;
}
.footer-column ul li {
    margin-bottom: 8px;
}
.footer-column ul li a {
    color: #fff;
    text-decoration: none;
}
.footer-column form {
    display: flex;
}
.footer-column input[type="email"] {
    padding: 10px;
    flex: 1;
    margin-right: 10px;
    border: none;
    border-radius: 4px;
}
.footer-column button {
    padding: 10px 20px;
    border: none;
    background-color: #e60000;
    color: #fff;
    cursor: pointer;
    border-radius: 4px;
}
.footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    /* margin-top: 20px; */
}
.payment-icons img {
    width: 250px;
}
</style>

{% schema %}
{
  "name": "footer_Sections",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "facebook_url",
      "label": "Facebook URL",
      "default": "#"
    },
    {
      "type": "text",
      "id": "instagram_url",
      "label": "Instagram URL",
      "default": "#"
    },
    {
      "type": "text",
      "id": "youtube_url",
      "label": "YouTube URL",
      "default": "#"
    },
    {
      "type": "image_picker",
      "id": "payment_icons",
      "label": "Payment Icons"
    }
  ],
  "blocks": [
    {
      "type": "shop_links",
      "name": "Shop Links",
      "settings": [
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        }
      ]
    },
    {
      "type": "help_links",
      "name": "Help Links",
      "settings": [
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "footer_Sections",
      "category": "Footer"
    }
  ]
}
{% endschema %}
