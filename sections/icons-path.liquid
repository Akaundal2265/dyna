{% assign brightness = section.settings.color_bg | color_brightness %} {% assign alpha = section.settings.color_bg | color_extract: 'alpha' %} <div class="icon--path {% if brightness < 190 and alpha > 0 %}light-text-section{% else %}dark-text-section{% endif %}" style="background-color:{{ section.settings.color_bg }}">
<div class="Container">
{% if section.settings.heading != blank %}  <h2 class="heading">{{ section.settings.heading }}</h2>{% endif %}
<div class="all--icons">
  {% for block in section.blocks %}
  <div class="list-icons">
    <img src="{{ block.settings.img | img_url : 'master' }}">
    <h5>{{ block.settings.heading }}</h5>
    <p>{{ block.settings.subheading }}</p>
  </div>
  {% endfor %}
</div>
</div>
</div>


{% schema %}
{
  "name": "Icon path",
  "max_blocks":4,
  "settings": [
    {
          "type": "color",
          "id": "color_bg",
          "label": "Background color"
        },{
          "type": "text",
          "id": "heading",
          "label": "Section heading"
        }],
  "blocks": [
    {
      "type": "icon",
      "name": "icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "img",
          "label": "Image"
        },{
          "type": "text",
          "id": "heading",
          "label": "heading"
        },{
          "type": "text",
          "id": "subheading",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Video",
      "name": "Icon path",
      "settings": {}
    }
  ]
}
{% endschema %}