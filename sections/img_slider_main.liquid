<div class="single-image-main-div">
  <div class="container">
      <div class="d-flex-single-car-div">
          <div class="singel-car-left-div">
            <div class="icon-content_img">
      <img   data-src="{{ section.settings.icon | img_url : 'master'  }}" class="late_load icon-img"  width="85"  height="65">
    </div>
              <div class="card-collection-heading"><h2>{{ section.settings.title }}</h2></div>
            <div class="content_para_fr">
      <p>{{ section.settings.para }}</p>
    </div>
          </div>
          <div class="singel-car-right-div">
              <div class="slingle-image-slider">
        {% for block in section.blocks %}
          <div class="single-img-div">
              <img  data-src="{{ block.settings.image | img_url : 'master'  }}" class="late_load desktop" width="100"  height="100">
          </div>
          {% endfor %}
      </div>
          </div>
      </div>
  </div>
</div>

{% schema %}
  {
    "name": "Single-Img-Slider-Section",
    "settings": [ 
    {
      "type": "header",
      "content": "Button",

      },
       {
          "id" : "icon",
          "type" : "image_picker",
          "label" : "Icon Image"
      },
      {
          "id" : "title",
          "type" : "text",
          "label" : "Heading"
      },
      {
          "id" : "url",
          "type" : "url",
          "label" : "URL"
      },
      {
        "id" : "btext",
        "type" : "text",
        "label" : "Button Text",
        "default":"Shop now"
     }, 
      {
         "id" : "para",
          "type" : "textarea",
          "label" : "Paragraph"
     }
    ],
          "presets": [
    {
      "name": "Single-Img-Slider-Section"
    }
  ],
    "blocks" : [
        {
            "type" : "image",
            "name" : "Image",
            "settings" :[
                {
                    "id" : "image",
                    "type" : "image_picker",
                    "label" : "Image"
                }
            ]
        }
    ],
  }
{% endschema %}