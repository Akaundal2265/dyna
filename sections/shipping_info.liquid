<style>
  .shipping_info_section_container {
    width: 100%;
    max-width: 100%;
    margin-bottom: 151px;
}
.shipping_section.container p {
    margin: 0;
}
  .shipping_main_heading {
    display: flex;
    justify-content: center;
    font-size: 30px;
    color: #000;
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 42px;
}
  .shipping_container_boxes {
    display: flex;
    gap: 27px;
}
  .shipping_info_content {
    border: 1px solid #737373;
    display: flex;
    flex-direction: column;
    justify-content: center;
    border-radius: 3px;
    padding: 33px 0px 33px 89px;
    height: 158px;
    position: relative;
}
  .shipping_info_box {
    display: flex;
    flex-direction: column;
    gap: 20px;
    padding-left: 59px;
}
  .abs_img_shipping {
    position: absolute;
    top: 20px;
    left: -60px;
    border: 1px solid #e51937;
    border-radius: 50%;
    height: 118px;
    width: 118px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #fff;
}
  .shipping_heading {
    font-size: 22px;
    font-weight: 600;
    color: #000;
}
  .shipping_heading span {
    color: #e51937;
}
  .shipping_info_para {
    width: 88%;
    font-size: 16px;
    color: #737373;
    line-height: 18px;
}
  
</style>















