    <div class="container">
<div class="video-main-section single-video-section carban-video-section">

     <video class="main-vdo" playsinline id='full-video' loop autoplay muted preload='none' width="600"  >
       <source id='mp4' src="{{ section.settings.video }}" type='video/mp4' />
       <source src="{{ section.settings.video }}" type="video/ogg">
    </video>
  
<div class="video-heading-with-para">
   <div class="vdo-para-box">
    <div class="vdo-para">
      <h2>{{ section.settings.title }}</h2>
    </div>
    <div class="shop_btn">
      <a href="{{ section.settings.link_url }}">{{ section.settings.button_url }}</a>
    </div>
   </div>
</div>
    </div>
</div>


<script>
  var vdo = document.getElementById("full-video");
  setTimeout(function() {
    if(vdo){
    vdo.play();
  };
  },2000)
  
</script>


